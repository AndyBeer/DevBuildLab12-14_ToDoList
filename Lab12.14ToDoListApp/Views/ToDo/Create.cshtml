@model EmployeeToDoViewModel

<h2>Add a To-Do Item</h2>

<form method="post">

    <label>To-Do Name:</label>
    <input type="text" class="form-control" name="tDName" />

    <label>To-Do Description:</label>
    <input type="text" class="form-control" name="tDDesc" />

    <label>Duration:</label>
    <input type="text" class="form-control" name="tDDuration" />

    <select name="employeeID">
        <option>-Unassigned-</option>
        @foreach (Employee e in Model.Employees)
        {
            <option value="@e.ID">@e.Name</option>
        }

    </select>


    <input type="submit" value="Add To-Do" />

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
